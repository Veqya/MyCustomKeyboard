<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	tools:context=".ui.MainActivity">


	<EditText
		android:id="@+id/activity_main_testing_input"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_marginTop="@dimen/activity_main_testing_input_mg_top"
		android:hint="@string/testing_hint"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toBottomOf="@+id/activity_main_settings_button" />

	<ImageButton
		android:id="@+id/activity_main_keyboard_button"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintStart_toEndOf="@+id/activity_main_settings_button"
		app:layout_constraintTop_toTopOf="@+id/activity_main_settings_button"
		app:srcCompat="@drawable/baseline_keyboard_24" />

	<ImageButton
		android:id="@+id/activity_main_settings_button"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_marginTop="120dp"
		app:layout_constraintEnd_toStartOf="@id/activity_main_keyboard_button"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toTopOf="parent"
		app:srcCompat="@drawable/baseline_settings_24" />

	<TextView
		android:id="@+id/activity_main_settings_label"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_marginBottom="@dimen/medium_margin"
		android:text="@string/activity_main_settings_label_text"
		app:layout_constraintBottom_toTopOf="@+id/activity_main_settings_button"
		app:layout_constraintEnd_toEndOf="@+id/activity_main_settings_button"
		app:layout_constraintStart_toStartOf="@+id/activity_main_settings_button" />

	<TextView
		android:id="@+id/activity_main_keyboard_label"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:text="Change keyboard"
		app:layout_constraintBottom_toBottomOf="@+id/activity_main_settings_label"
		app:layout_constraintEnd_toEndOf="@+id/activity_main_keyboard_button"
		app:layout_constraintStart_toStartOf="@+id/activity_main_keyboard_button"
		app:layout_constraintTop_toTopOf="@+id/activity_main_settings_label" />

</androidx.constraintlayout.widget.ConstraintLayout>